// TODO: Don't think I need this at all
// Just do everything in the tile type.
// Use gradients for all the tracking (wildness, land height)
// Rules calculate gradients per tile gap (can go out to 3 beyond)
// And then use that to decide what can be placed
{
  "forest": {
    "if": {
      "or": [
        { "nextTo.forest": { "greater": 0 } },
        { "nextTo.deepForest": { "greater": 0 } }
      ]
    },
    "tags": ["land"]
  },
  "grass": {
    "tags": ["land"]
  },
  "coast": {
    "tags": ["water"]
  },
  "sea": {
    "tags": ["water", "deepWater"],
    "excludes": ["land"]
  },
  "deepOcean": {
    "if": {
      "onlyNextTo": { "includes": "deepWater" }
    },
    "tags": ["water", "deepWater", "veryDeepWater"],
    "excludes": ["land", "coast"]
  }
}
